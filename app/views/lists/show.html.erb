<div class="home-banner">
  <h2><%= @list.name.capitalize %> movies</h2>
</div>

<div class="container my-3">
  <div class="list-container">
  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-danger" %>
    <div class="box">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= bookmark.comment %>)">
          <%= bookmark.movie.title %>
          <%= bookmark.movie.poster_url %>
        </div>
      <% end %>
    </div>
  </div>
</div>
