<div class="home-banner">
  <h2><%= @list.name.capitalize %> movies</h2>
</div>


<%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>

<div class="container">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card mt-5 mb-10" style="width: 19rem;">
      <div class="card-image", style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= bookmark.movie.poster_url %>)"></div>
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.movie.rating %>/10</p>
          <%= link_to "X",
                  bookmark_path(bookmark),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
        </div>
    </div>
  <% end %>
</div>
