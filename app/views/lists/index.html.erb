<div class="home-banner">
  <h1>My Favorite Movies</h1>
  <br>
  <h4>
  <span data-controller="typed-js"></span>
  </h4>
</div>


<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <div class="box">
        <% @lists.each do |list|%>
            <% if list.photo.attached? %>
              <div class="card-category d-flex justify-content-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, width: 100, height: 80, crop: :fill %>')">
                <%= link_to list.name, list_path(list) %>
              </div>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
